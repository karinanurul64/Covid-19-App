<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="16dp">

        <TextView
            android:id="@+id/headerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Indigo"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DKI Jakarta" />

        <TextView
            android:id="@+id/dataRecovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/Teal"
            android:gravity="center"
            android:padding="12sp"
            android:text="08258"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toStartOf="@+id/dataPositif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerList" />

        <TextView
            android:id="@+id/dataPositif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/Green"
            android:gravity="center"
            android:padding="12sp"
            android:text="08258"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerList" />

        <TextView
            android:id="@+id/dataDead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/Red"
            android:gravity="center"
            android:padding="12sp"
            android:text="08258"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dataPositif"
            app:layout_constraintTop_toBottomOf="@+id/headerList" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>